algoritmo "ConversorMoedas"
//fazer conversão de moedas 4 vezes
var
   cont:inteiro
   dolar,reais:real
inicio
      cont<-1
      enquanto (cont<=4)faca
               Escreva ("Qual o valor em R$:")
               leia(reais)
               dolar<-(reais/5.51)
               Escreval("O valor convertido é U$$:",dolar:5:2)
               cont<-cont+1
      fimEnquanto
fimalgoritmo
