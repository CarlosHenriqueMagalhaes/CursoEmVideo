Algoritmo "Media"
//Solicitar dois numeros e exibir a média entre eles
var
   n1,n2:inteiro
   m:real
inicio
      escreva ("Informe o primeiro número: ")
      leia (n1)
      escreva ("informe o segundo número: ")
      leia (n2)
      
      m<-((n1+n2)/2)
      
      escreva (" A média entre",n1," e",n2," é igual a:",m)
fimalgoritmo
